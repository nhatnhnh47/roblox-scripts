-- FPS Display
local fpsLabel = Instance.new("TextLabel")
fpsLabel.Text = "FPS: ..."
fpsLabel.TextColor3 = Color3.new(1, 1, 1)
fpsLabel.BackgroundTransparency = 1
fpsLabel.Size = UDim2.new(0.4, 0, 1, 0)
fpsLabel.Position = UDim2.new(0, 5, 0, 0)
fpsLabel.Font = Enum.Font.Code
fpsLabel.TextSize = 14
fpsLabel.TextXAlignment = Enum.TextXAlignment.Left

-- ƒê·∫£m b·∫£o frame t·ªìn t·∫°i tr∆∞·ªõc khi g√°n Parent
if frame and frame:IsA("GuiObject") then
    fpsLabel.Parent = frame
else
    warn("Frame kh√¥ng t·ªìn t·∫°i ho·∫∑c kh√¥ng h·ª£p l·ªá")
end

-- üìà FPS Tracker
spawn(function()
    local last = tick()
    local frames = 0
    while true do
        frames += 1
        local now = tick()
        if now - last >= 0.5 then
            local fps = math.floor(frames / (now - last))
            fpsLabel.Text = "FPS: " .. fps
            frames = 0
            last = now
        end
        task.wait(0.05) -- Ch·ªù 50ms ƒë·ªÉ gi·∫£m t·∫£i h·ªá th·ªëng
    end
end)
